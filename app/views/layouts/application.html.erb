<!DOCTYPE html>
<html>
<head>
  <title>Online Gaming App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<nav>
  <div class="go-left">
    <%= link_to 'Home', root_path %>
    <%= link_to 'Games', game_details_path %>
    <% if current_user %>
      <%= link_to 'My Play History', plays_path({user_id: current_user.id}) %>
    <% end %>
  </div>
  <div class="go-right">
    <% if current_user %>
      Welcome, <%= link_to current_user.username, edit_user_registration_path %>
      <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path %>
      <%= link_to 'Register', new_user_registration_path %>
    <% end %>
  </div>
</nav>

<header><h1>Online Gaming Portal</h1></header>

<%= yield %>

</body>
</html>
